<%= form_for([post, comment =  post.comments.build]) do |f| %>
	
	<% if comment.errors.any? %>
		<div id="error_explanation" class="alert" style="text-align: center; color: red;">
			<h2><%= pluralize(comment.errors.count, "error") %> Prohibited this comment from being saved:</h2>

			<ul>
				<% comment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<div class="control">
			<%= f.label :comment, class: 'label' %>
			<%= f.cktext_area :comment, class: 'textarea', wrapper: false %>
		</div>
	</div>
	<%= f.submit :Submit, class: "button is-primary" %>

<% end %> 








