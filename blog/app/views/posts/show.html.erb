<% content_for :page_title, post.title %>



<section class="section">
	<div class="container">
		<nav class="level">
			<div class="level-left">
				<p class="level-item">
					<strong>Actions</strong>
				</p>
			</div>
		<% if post.user == current_user %>
			<div class="level-right">
				<p class="level-item">
					<%= link_to "Edit",edit_post_path(post),class: "button" %>

				</p>
				<p class="level-item">
					<%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure?"}, class: "button is-danger " %>
				</p>
			</div>
		<% end %>	

		</nav>
		<hr />

		<div class="content">
			<h6>Created on: </h6><%= post.created_at.strftime("%b %d, %Y") %>
			<p><h5>Contents :</h5><%= raw post.content %></p>
			
		</div>
</section>

<section class="section comments">
	<div class="container">
		<h2 class="subtitle is-5">
			<strong><%= post.comments.count %>
				
			</strong> Comments
		</h2>
		<%= render post.comments, post: post%>
		<div class="comment-form">
			<hr />
			<h3 class="subtitle is-3">Leave a reply</h3>
			<%= render 'comments/form', post: post %>
		</div>
	</div>
</section>