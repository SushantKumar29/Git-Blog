<% content_for :page_title, "Index" %>

<div class="tile is-ancestor" style=" width: 20%; height: 350px; float: left; margin-left: 0%;">
  <div class="tile is-parent">
    <article class="tile is-child notification is-info">
      <div class="content" style="text-align: center;">
        <div class="title" style="font-size: 17px; font-variant: small-caps;"><u>TAGS</u></div>
        <p class="subtitle" style="font-variant: small-caps;">
        	<ul style="text-align: left;">
        		<li>Educational</li>
				<li>Technical</li>
				<li>Life Stories</li>
				<li>Devotional</li>
        	</ul>
        	
        </p>
        <div class="content">
        </div>
      </div>
    </article>
  </div>
</div>

<section class="section">
	<div class="container" style="width: 60%;">
		<% @posts.each do |post| %>
		<div class="card">
			<div class="card-content">
				<div class="media">
					<div class="media-content">
						<p class="title is-4">
							<%= link_to post.title, post %>
						</p>
					</div>
				</div>
				<div class="content" style="overflow: hidden; height: auto;">
					<strong>Posted By:</strong>&nbsp; <%= post.user.email.split('@')[0].capitalize %><br />
					<strong>Posted At:</strong>&nbsp; <%= post.created_at.strftime("%I:%M %p") %>
				</div>
			</div>
		</div>
	<% end %>
	</div>
</section>